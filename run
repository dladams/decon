ICONV=$1
DXDZ=$2
SIGMA=$3
NOISE=$4
SEED=$5
NEVT=$6
if [ -z "$SIGMA" ]; then
  echo Usage: $0 ICONV THTDZ SIGMA [NOISE]
  echo "         ICONV = 0: True energy deposit"
  echo "         ICONV = 1: Convolution and smearing"
  echo "         ICONV = 2: Deconvolution"
  exit 0
fi
if [ -z "$NOISE" ]; then
  NOISE=0.0
  SEED=0
fi
rm -f wsave/* &&
root.exe -q 'run.C('$DXDZ', "'$SIGMA'", '$ICONV', '$NOISE', '$SEED', '$NEVT')' &&
cp wf*.png wsave
cp dft*.png wsave
makeIndex wsave
